<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="true"
  	PARTITIONING="NONE"
    SCHEMA_AUTO_PROPAGATE="false"
    HAS_CONDITIONAL_OUTPUTS="true"
    IS_MULTIPLYING_OUTPUTS="true"
    DATA_AUTO_PROPAGATE="false"
  >
   <!--
  -->
    <SIGNATURE />
  </HEADER>

  <FAMILIES>
    <FAMILY>XML</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>

   <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER
      NAME="XML_FILE"
      FIELD="FILE"
      NUM_ROW="1"
      SHOW_IF="OVERRIDE_INPUT_XML_FILE != 'true'"
    >
    <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/in.xml"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER
      NAME="XSLT_FILE"
      FIELD="FILE"
      NUM_ROW="2"
      SHOW_IF="OVERRIDE_INPUT_XSL_FILE != 'true'"
    > 
	<DEFAULT>"__COMP_DEFAULT_FILE_DIR__/in.xsl"</DEFAULT>  
    </PARAMETER>
    <PARAMETER
      NAME="OUTPUT_FILE"
      FIELD="FILE"
      NUM_ROW="3"
      SHOW_IF="OVERRIDE_OUTPUT != 'true'"
     >
     <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/in.html"</DEFAULT>
    </PARAMETER>
	
	<PARAMETER NAME="PARAMS" FIELD="TABLE" NUM_ROW="6" NB_LINES="8">
      <ITEMS>
   		<ITEM NAME="NAME"/>
        <ITEM NAME="VALUE"/>
      </ITEMS>
    </PARAMETER>

  <PARAMETER
      NAME="OVERRIDE_INPUT_XML_FILE"
      FIELD="CHECK"
      NUM_ROW="21"
      >
      <DEFAULT>false</DEFAULT>
  </PARAMETER>
  <PARAMETER
      NAME="INPUT_XML_FILE_COL"
      FIELD="PREV_COLUMN_LIST"
      NUM_ROW="21"
      SHOW_IF="OVERRIDE_INPUT_XML_FILE == 'true'"
    >
  </PARAMETER>

  <PARAMETER
      NAME="OVERRIDE_INPUT_XSL_FILE"
      FIELD="CHECK"
      NUM_ROW="22"
      >
      <DEFAULT>false</DEFAULT>
  </PARAMETER>
  <PARAMETER
      NAME="INPUT_XSL_FILE_COL"
      FIELD="PREV_COLUMN_LIST"
      NUM_ROW="22"
      SHOW_IF="OVERRIDE_INPUT_XSL_FILE == 'true'"
    >
  </PARAMETER>

  <PARAMETER
      NAME="OVERRIDE_OUTPUT"
      FIELD="CHECK"
      NUM_ROW="23"
      >
      <DEFAULT>false</DEFAULT>
  </PARAMETER>
  <PARAMETER
      NAME="OUTPUT_COL"
      FIELD="COLUMN_LIST"
      NUM_ROW="23"
      SHOW_IF="OVERRIDE_OUTPUT == 'true'"
    >
  </PARAMETER>

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="25"
    >
      <DEFAULT/>
    </PARAMETER>

  </PARAMETERS>
  
  <ADVANCED_PARAMETERS>
    <PARAMETER
      NAME="CACHE_SOURCE"
      FIELD="CHECK"
      NUM_ROW="10"
      >
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
  </ADVANCED_PARAMETERS>
  
	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="SAXON-HE" MODULE="Saxon-HE-10.6.jar" MVN="mvn:net.sf.saxon/Saxon-HE/10.6"  REQUIRED="true" />
			<IMPORT NAME="apache-commons-io"
                    MODULE="commons-io-2.8.0.jar" MVN="mvn:commons-io/commons-io/2.8.0" 
               		REQUIRED_IF="CACHE_SOURCE == 'true'" />
		</IMPORTS>
	</CODEGENERATION>
	
  <RETURNS>
  	<RETURN NAME="OUTPUT_FILEPATH" TYPE="id_String" AVAILABILITY="FLOW"/>
  	<RETURN NAME="OUTPUT_FILENAME" TYPE="id_String" AVAILABILITY="FLOW"/>
  </RETURNS>
</COMPONENT>
